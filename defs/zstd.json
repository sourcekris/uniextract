{
    "name":"Facebook Zstandard zst format",
    "comment":"Facebook's Zstandard compression library and program - https://github.com/facebook/zstd",
    "extensions":["zst"],
    "install": {
        "method":"source",
        "repo":"https://github.com/facebook/zstd",
        "build":"make && cp zstd $tools",
        "exist_check":["zstd -V","zstd command line interface"]
    },
    "pack": {
        "exe":"$tools/zstd",
        "cmdline":"$tool $file"
    },
    "unpack": {
        "exe":"$tools/zstd",
        "cmdline":"$tool -d $archive --output-dir-flat $destdir",
        "extension":"zst",
        "force_extension": true
    },
    "test": {
        "blob":"H4sIAPAk0WEAA2NR8pXwceBhgIA7QEZDVHCIo5+LY5CLT5QJSHBVvW06ALdvykEnAAAA",
        "file":"?",
        "content":"FACEBOOKZSTD",
        "delete":true
    }
}