{
    "name": "bzip2",
    "extensions": ["bz2"],
    "install": {
        "method": "apt",
        "packages": ["atool", "bzip2"]
    },
    "pack": {
        "exe": "atool",
        "cmdline": "$tool -a $file.bz2 $file",
        "type": "archiver"
    },
    "unpack": {
        "exe": "atool",
        "cmdline": "$tool --extract-to=$destdir $archive",
        "extension": "bz2",
        "force_extension": true
